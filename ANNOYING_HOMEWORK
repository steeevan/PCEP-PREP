# 3
c = str(input("Enter a sentence:  "))
counter = 0
counter2 = 0
i = 0
for i in range(len(c)):
    if (
            (c[i] == 'a')
            or (c[i] == 'e')
            or (c[i] == 'i')
            or (c[i] == 'o')
            or (c[i] == 'u')
    ):
        counter += 1
    elif (
            (c[i] == 'b')
            or (c[i] == 'c')
            or (c[i] == 'd')
            or (c[i] == 'f')
            or (c[i] == 'g')
            or (c[i] == 'h')
            or (c[i] == 'j')
            or (c[i] == 'k')
            or (c[i] == 'l')
            or (c[i] == 'm')
            or (c[i] == 'n')
            or (c[i] == 'p')
            or (c[i] == 'q')
            or (c[i] == 'r')
            or (c[i] == 's')
            or (c[i] == 't')
            or (c[i] == 'v')
            or (c[i] == 'x')
            or (c[i] == 'y')
            or (c[i] == 'z')
    ):
        counter2 += 1
print("Vowel amount:  ", counter)
print("Consonant amount:  ", counter2)
